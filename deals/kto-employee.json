					{
						"value": "Tuesday, December 23",
						"limit": 460
					}
				],	
				"required": true,
				"conditional": [
					{
						"field": "attend",
						"value": "Yes"
					}
				]
			},
			{
				"type": "info",
				"markdown": "---"
			},
			{
				"type": "fields_group",
				"bgcolor": "#E8C97B",
				"fields": [
					{
						"id": "z_FIRSTNAME",
