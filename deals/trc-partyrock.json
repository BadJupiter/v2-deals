{
	"biz_id": "threerivers",
	"check_in": true,
	"auth_required": true,
	"error_auth": {
		"title": "Woops!",
		"content": "Can't play if you ain't authenticated!"
	},

	"FORM": {
		"title": "Three Rivers Casino Resort",
		"fields": [
			{
				"id": "DIST",
				"label": "DIST",
				"type": "text",
				"sticky": true,
				"disabled": true,
				"hidden": true
			},
			{
				"type": "info",
				"markdown": "# Party Rock Bingo"
			},
			{
				"type": "info",
				"markdown": "## **May 16th, 2025**"	
			},
			{
				"type": "info",
				"markdown": "## **Casino Event Center, Florence**"	
			},
			{
				"type": "info",
				"markdown": "---"
			},
			{
				"type": "info",
				"justify": "center",
				"markdown": " \n\nAs a valued Three Rivers Casino Resort Guest, you and a guest are invited to join us for Party Rock Bingo!"
			},
			{
				"id": "attend",
				"label": "Are you able to attend the event?",
				"type": "select",
				"range": ["Yes","No"],
				"required": true
			},
			{
				"id": "time",
				"label": "Which session would you like to attend?",
				"type": "select",
				"range": ["4:00pm","7:00pm"],
				"required": true,
				"conditional": {
					"field": "attend",
					"value": "Yes"
				}
			},
			{
				"id": "guest",
				"label": "Will you be bringing a guest?",
				"type": "select",
				"range": ["Yes","No"],
				"required": true,
				"conditional": {
					"field": "attend",
					"value": "Yes"
				}
			},
			{
				"id": "room",
				"label": "Would you like to be contacted about a room reservation?",
				"type": "select",
				"range": ["Yes","No"],
				"required": true,
				"conditional": [
					{
						"field": "attend",
						"value": "Yes"
					},
					{
						"field": "DIST",
						"values": ["C 40-59","D 60-74","E 75-99","F 100-149","G 150-199","H 200-299","I 300+","K UNKNOWN"]	# match one of
					}
				]
			},
			{
				"type": "info",
				"markdown": "---"
			},
			{
				"type": "fields_group",
				"bgcolor": "#08acbc",
				"fields": [
					{
						"id": "z_FIRSTNAME",
						"label": "First Name:",
						"type": "text",
						"sticky": true,
						"disabled": true
					},
					{
						"id": "z_LASTNAME",
						"label": "Last Name:",
						"type": "text",
						"sticky": true,
						"disabled": true
					},
					{
						"id": "PlayerID",
						"label": "Club #:",
						"type": "text",
						"sticky": true,
						"disabled": true
					}
				]
			}
		],
		"submit": {
			"label": "Submit RSVP",
			"color": "#20363d"
		
		}
	},
	"MAIN": {
		"body_md": "# You're all set! \n\nThanks for RSVPing to **Party Rock Bingo**. If anything changes, just scan your invitation again or contact your host. We look forward to seeing you at **Three Rivers Casino Resort - Florence**."
	}
}
