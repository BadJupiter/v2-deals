{
	"biz_id": "grandlake",
	"check_in": true,
	"auth_required": true,
	"error_auth": {
		"title": "Woops!",
		"content": "Can't play if you ain't authenticated!"
	},
	
	"FORM": {
			"fields": [
			{
				"type": "info",
				"markdown": "# Grand Lake Casino"
			},
			{
				"type": "info",
				"markdown": "# Cruise Giveaway"
			},
			{
				"type": "info",
				"markdown": "## **Friday, January 9th**"	
			},
			{
				"type": "info",
				"markdown": "---"
			},
			{
				"type": "info",
				"justify": "center",
				"markdown": " \n\nYou are invited to our exclusive **Cruise Giveaway**."
			},
			{
				"id": "attend",
				"label": "Will you pick up an NCL Cruise Certificate?",
				"type": "select",
				"range": ["Yes","No"],
				"required": true,
				"global": true,
  				"capacity_map": {
  					"Yes": 1,
    				"No": 0
				}
			},
			{
				"id": "time",
				"label": "What time would you like to pick up?",
				"type": "select",
				"count_from": "attend",
				"limit": 1000,
				"range": [
					{
						"value": "4pm",
						"limit": 250
					},
					{
						"value": "5pm",
						"limit": 250
					},
					{
						"value": "6pm",
						"limit": 250			
					},
					{
						"value": "7pm",
						"limit": 250
					}
				],				
				"required": true,
				"conditional": [
					{
						"field": "attend",
						"value": "Yes"
					}
				]
			},
			{
				"type": "info",
				"markdown": "---"
			},
			{
				"type": "fields_group",
				"bgcolor": "#dbc8b5",
				"fields": [
					{
						"id": "PlayerID",
						"label": "Account Number:",
						"type": "text",
						"sticky": true,
						"disabled": true
					},
					{
						"id": "z_NAME",
						"label": "Name:",
						"type": "text",
						"sticky": true,
						"disabled": true
					},
					{
						"id": "z_EMAIL",
						"label": "Email:",
						"type": "text",
						"sticky": true,
						"disabled": false
					}
				]
			}
		],
		"limits": {
			"most_recent_only": true,
			"most_recent_key": "PlayerID"
		},
		"submit": {
			"label": "Submit RSVP",
			"color": "#20363d"
		
		}
	},
	"MAIN": {
		"body_md": "# Your reservation is confirmed. \n\nIf you need to make any changes to your reservation, just scan the QR code on your invitation again. If you need any help, please stop by the Players Club at the casino on your next visit. We look forward to seeing you soon!"
	}
}
