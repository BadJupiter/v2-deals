{
	"biz_id": "colusacasino",
	"check_in": true,
	"auth_required": true,
	"error_auth": {
		"title": "Woops!",
		"content": "Can't play if you ain't authenticated!"
	},

	"FORM": {
		"fields": [
			{
				"type": "info",
				"markdown": "# Loter√≠a VIP Event RSVP"
			},
			{
				"type": "info",
				"markdown": "## Date: December 30, 2024"
			},
			{
				"type": "info",
				"markdown": "### Time: X:00 PM"
			},
			{
				"type": "info",
				"justify": "center",
				"markdown": "You and a guest are invited to the VIP Loteria Event at Colusa Casino! \n\nThe favor of your reply is requested by **December 17th** to confirm your attendance."
			},
			{
				"type": "info",
				"markdown": "---"
			},
			{
				"id": "attend",
				"label": "Are you able to attend?",
				"type": "select",
				"range": ["YES. I will be there","NO. Please keep me in mind for next time."],
				"required": true
			},
			{
				"id": "guests",
				"label": "I am confirming for:",
				"type": "select",
				"range": ["Myself","Me and a guest"],
				"required": false
			},
			{
				"id": "room",
				"label": "If rooms are available, would you like someone to contact you regarding reservations?",
				"type": "select",
				"range": ["Yes","No"],
				"required": false
			},
			{
				"type": "info",
				"markdown": "---"
			},
			{
				"type": "fields_group",
				"bgcolor": "#c8f0fc",
				"fields": [
					{
						"id": "name",
						"label": "Name:",
						"type": "text",
						"required": false
					},
					{
						"id": "rewards",
						"label": "Rewards #:",
						"type": "text",
						"required": false
					},
					{
						"id": "email",
						"label": "Email:",
						"type": "email",
						"required": false
					}
				]
			}
		],
		"submit": {
			"label": "Submit RSVP",
			"color": "#20363d"
		},
		"notify": {
			"opt_in": "contact",
			"message": "(from {_mob}) {name} requested contact: {comments}",
			"mobiles": [
				"+16462474444",
				"+15039533423"
			]
		}
	},
	"MAIN": {
		"body_md": "# Thank you for your response! \n\nIf you have any questions or need to make changes to your RSVP, please don't hesitate to get in touch.We hope to see you soon at **Colusa Casino Resort**."
	}
}
