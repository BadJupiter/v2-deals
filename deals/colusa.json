{
	"biz_id": "colusacasino",
	"check_in": true,
	"auth_required": true,
	"error_auth": {
		"title": "Woops!",
		"content": "Can't play if you ain't authenticated!"
	},
	"styling": {
		"fonts": {
			"headers": {
				"family": "Raleway",
				"weight": 700,
				"style": "italic"
			},
			"body": {
				"family": "Raleway",
				"weight": "normal"
			},
			"formlabels": {
				"family": "Raleway",
				"weight": "bold"
			}
		}
	},
	"FORM": {
		"fields": [
			{
				"type": "info",
				"markdown": "# Your Voice Matters\n\nThank you for visiting Colusa Casino Resort! We hope you enjoyed your time with us. Please let us know how we did on your visit."
			},
			{
				"type": "info",
				"markdown": "---"
			},
			{
				"id": "games",
				"label": "What games did you play during your visit? (You can pick more than one)",
				"type": "multi-select",
				"range": ["Slot Machines","Table Games","Video Poker","Keno","Bingo"],
				"required": false
			},
			{
				"id": "dining",
				"label": "What food outlets did you dine in during your visit? (You can pick more than one)",
				"type": "multi-select",
				"range": ["Jack's Place","Cafe Ole","Snack Bar (bingo)"],
				"required": false
			},
			{
				"id": "rating",
				"label": "How was your overall experience?",
				"type": "select",
				"range": ["⭑⭑⭑⭑⭑","⭑⭑⭑⭑","⭑⭑⭑","⭑⭑","⭑"],
				"required": false
			},
			{
				"id": "comments",
				"label": "Tell us how we could improve your experience:",
				"type": "textarea",
				"rows": 3,
				"required": false
			},
			{
				"id": "return",
				"label": "How likely are you to visit again?",
				"type": "select",
				"range": ["definitely will","very likely","maybe","not likely","will not"],
				"required": false
			},
			{
				"id": "recommend",
				"label": "How likely are you to recommend us to friends and family?",
				"type": "select",
				"range": ["definitely will","very likely","maybe","not likely","will not"],
				"required": false
			},
			{
				"id": "amenities",
				"label": "Is there anything we don't currently offer that we should?",
				"type": "textarea",
				"rows": 3,
				"required": false
			},
			{
				"id": "team",
				"label": "Are there any Colusa Casino Resort team members you would like to recognize for exceptional service?",
				"type": "textarea",
				"rows": 3,
				"required": false
			},
			{
				"id": "contact",
				"label": "Please check the box if you'd like to be contacted by Guest Service staff about your experience",
				"type": "checkbox",
				"required": false
			},
			{
				"type": "info",
				"markdown": "---"
			},
			{
				"type": "fields_group",
				"bgcolor": "#83c6dd",
				"fields": [
					{
						"id": "name",
						"label": "Name:",
						"type": "text",
						"required": false
					},
					{
						"id": "rewards",
						"label": "Rewards #:",
						"type": "text",
						"required": false
					},
					{
						"id": "address",
						"label": "Address:",
						"type": "textarea",
						"rows": 3,
						"required": false
					},
					{
						"id": "email",
						"label": "Email:",
						"type": "email",
						"required": false
					}
				]
			}
		],
		"submit": "Submit Feedback",
		"notify": {
			"opt_in": "contact",
			"message": "(from {_mob}) {name} requested contact: {comments}",
			"mobiles": [
				"+16462474444",
				"+15039533423"
			]
		}
	},
	"MAIN": {
		"body_md": "# Thank You!\n\nWe appreciate your feedback, and thank you for visiting Colusa Casino Resort."
	}
}
