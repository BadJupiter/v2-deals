{
	"biz_id": "jupiter",
	"check_in": true,
	"auth_required": true,
	"error_auth": {
		"title": "Woops!",
		"content": "Cain't play if you ain't authenticated!"
	},
	
	"FORM": {
		"fields": [
			{
				"type": "info",
				"markdown": "# **Want to see a little more?**"
			},			
			{
				"type": "info",
				"markdown": "---"
			},
			{
				"id": "solution",
				"label": "What sort of solution are you looking for?",
				"type": "multi-select",
				"range": ["Loyalty","Feedback","RSVPs","Check-ins"],
				"required": false
			},
			{
				"id": "other",
				"type": "text",
				"required": false,
				"placeholder": "something else?"
			},
			{
				"id": "demo",
				"label": "Would you like to see a demo?",
				"type": "select",
				"range": ["Yes, I would","Not just yet, thanks"],
				"required": true
			},
			{
				"id": "contact",
				"label": "How shall we get in touch?",
				"type": "select",
				"range": ["Email","Text"],
				"required": true,
				"conditional": {
					"field": "demo",
					"value": "Yes, I would"
				}
			},
			{
				"type": "info",
				"markdown": "---"
			},
			{
				"type": "fields_group",
				"bgcolor": "#FFF4CC",
				"fields": [
					{
						"id": "name",
						"label": "Name:",
						"type": "text",
						"required": true
					},
					{
						"id": "email",
						"label": "Email:",
						"type": "email",
						"required": false
					},
					{
						"id": "comments",
						"label": "Any other thoughts, questions, or ideas - let us know:",
						"type": "textarea",
						"rows": 3,
						"required": false
					}
				]
			}
		],
		"submit": {
			"label": "Submit"
		}
	},
	
	"MAIN": {
		"title": "Thank You!",
		"body_md": "# We appreciate your interest!\n\nCheck your texts. You'll get a message with a link to a demo you picked. Once you've had a look just holler if you'd like to talk more."
	}
}
